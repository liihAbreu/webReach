.ir-topo
    width 50px
    height 50px
    background-color: $colors['second'];
    position fixed
    bottom 10px
    right: 10px
    z-index: 999
    border-radius 5px

.seta
    padding-top: 5px
    padding-left: 3px
    animation: piscar 2s infinite

.footer
    background-color $colors['third'];
    padding 30px 
    border-top 1px solid $colors['second'];
    .lista-footer
        margin-bottom 0
        list-style none
        display flex
        justify-content: space-between;
        padding-left 0
        flex-wrap wrap
        li
            font-size 14px
            .sub-lista
                list-style none
                padding-left 0
                li
                    font-weight normal
    .icones-redes-sociais
        display flex
        align-items: flex-start;
        justify-content: flex-end;
        img 
            width 30px
            margin-left 15px
    .empresa
        text-align right
        margin-top 10px
        p
            font-size 14px

@media screen and (max-width: 1165px)
    .footer
        .lista-footer
            li
                margin-left 15px
                margin-top 20px
                .sub-lista
                    li
                        margin-top 0

@media screen and (max-width: 991px)
    .footer
        .icones-redes-sociais
            justify-content center
            margin-top 60px
        .empresa
            text-align center

@media screen and (max-width: 767px)
    .footer
        .lista-footer
            li
                margin-left 0
                .sub-lista
                    li
                        margin-left 10px