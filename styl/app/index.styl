.bg-palestras
    background-color $colors['third'];
    width 100%
    height 100%
    padding 20px
    padding-top 35px
    margin-top 20px
    border 1px solid $colors['second'];
    border-radius 5px

.palestras
    padding-bottom 15px
    a
        font-size 18px
        color #fff
        font-weight bold
        &:hover
            text-decoration underline
    .titulo-palestras
        padding: 35px

.bg-bolinhas
    background-image url('/img/bg-bolinhas.png')
    width 100%
    height 100%
    background-size contain
    background-repeat no-repeat
    background-position bottom right
    background-position-x: 595px;
    .apresentacao
        padding-bottom 80px
        img 
            box-shadow 1px 1px 3px #2b2b2b;

@media screen and (max-width: 1120px)
    .bg-bolinhas
        background-position-x: 329px;

@media screen and (max-width: 767px)
    .bg-bolinhas
        background-position-x: 0;
    .palestras
        .titulo-palestras
            padding: 0

@media screen and (max-width: 576px)
    h2
        font-size: 3rem;
