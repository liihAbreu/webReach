.bg-interno
    background-color $colors['third'];
    padding 20px
    padding-bottom 40px
    margin-bottom 80px
    box-shadow 0 0 3px #272626

.dica
    display flex
    flex-wrap: wrap;
    & > *
        display flex
        flex-wrap: wrap;

.bg-dica
    background-color #ffffff
    width 100%
    border 1px solid $colors['second'];
    border-radius 5px
    position relative
    margin-top 30px
    a
        display: flex;
        flex-direction: column;
        flex: 1;
        img 
            padding 20px 0
            height: 100%;
            margin-bottom: 80px;
        .titulo-dica
            text-align center
            background-color $colors['second'];
            color #fff
            width 100%
            padding 10px
            position: absolute;
            bottom: 0;