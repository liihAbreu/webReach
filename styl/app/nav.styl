.fechar-menu
    position: absolute
    right 10px
    top 10px
    cursor pointer
    img 
        max-width 30px
.menu-mob-flutuante
    display flex
    width: 100%
    height 100%
    position: fixed
    z-index 999999999
    top 0
    left 0;
    justify-content: center
    background-color alpha(white, 0.9)
.display-menu-mob
    flex-direction: column
    display: flex
    align-self: center
    justify-content: center
    padding: 0
    li
        list-style: none
        text-align: center
        font-size: 16px
        margin-top 10px
        a
            text-decoration: none
            color: $colors['black']
            transition: .3s
            &:hover
                color: $colors['black']
                font-weight: bold
                text-decoration underline
            &.ativo
               color: $colors['black']
               font-weight: bold
               text-decoration underline
.display-menu
    padding: 0
    margin 0
    display: flex
    justify-content: center
    li
        list-style: none
        margin-right: 40px
        font-size: 14px
        letter-spacing: 1.2px
        font-weight bold
        &:last-child
            margin-right: 0
        a
            text-decoration: none
            color: $colors['text'];
            transition: .3s
            &:hover
                color: $colors['text'];
                font-weight: bold
                border-bottom 2px solid $colors['second'];
                transition 1s 
            &.ativo
               color: $colors['text'];
               font-weight: bold
               border-bottom 2px solid $colors['second'];
               transition 1s
.menu-mob
    cursor pointer
    span.icon-bar
        margin-top 4px
        width: 30px
        height 4px
        display: block
        border-radius 3px
        background-color: $colors['text']


.menu-interno
    display flex
    align-items: center
    justify-content: space-around;
    & > *
        margin-right 15px
    .logo-interno
        img 
            width 100px


@media screen and (max-width: $queries['medium'])
    .display-menu
        li
            margin-right: 20px
            font-size: 14px
@media screen and (max-width: $queries['small'])
    .display-menu
        li
            margin-right: 15px
            font-size: 14px





