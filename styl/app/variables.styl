
// Breakpoints
$queries = {
	'small' : 576px,
	'medium' : 768px,
	'large' : 992px,
	'x-large': 1200px
}

// COLORS //
$colors = {
	'black': #333333,
	'text': white,
	'inverse':'black',
	'cinza': #767676,
	'main': #0f0f0f,
	'second': #4b0f12, 
	'third':#002039,
}

$shadow-color = #f9f9f9;

// fonts
$fonts-family = 'Rubik', sans-serif

$font-color-default = $colors['text']

// defina os tamanhos da tag H
$hs-sizes = {
	'h1' : 52px,
	'h2' : 44px,
	'h3' : 30px,
	'h4' : 25px,
	'h5' : 16px,
	'h6' : 14px
}


// fonts porcentagem em monitores abaixo de 728
$font-medium = 0.9;
$font-medium-align = left

// fonts porcentagem 528
$font-xs = 0.8;
$font-xs-align = center

// btn default setting
$btn-bg = $colors['second']
$btn-text = $colors['text']

// tamanho de fontes
$font-size = {
	'extra-small' 	: 9px,
	'small' 		: 12px,
	'medium'		: 18px,
	'large'			: 25px,
	'extra-large'	: 20px		
}
$letterSpacing = 0.8px
$lineHeight = 30px

// padding
$pad_marg = {
	'20' : 20px,
	'40' : 40px,
	'60' : 60px,
	'80' : 80px
}